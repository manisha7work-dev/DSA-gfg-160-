class Solution {
    public void rotateMatrix(int[][] mat) {
        // code here
        int n =mat.length;
        
        //transpose the matrix
        
        for( int i=0 ; i<n ; i++){
            for(int j =i+1; j< n ; j++){
                int temp= mat[i][j];
                mat[i][j]= mat[j][i];
                mat[j][i]= temp;
            }
        }
        
        //step 2: reverse each matrix
        
        for(int j =0; j<n; j++){
            int top =0;
            int bottom= n-1;
            while(top< bottom){
                int temp= mat[top][j];
                mat[top][j]= mat[bottom][j];
                mat[bottom][j]= temp;
                top++;
                bottom--;
            }
        }
    }
}
